{
  "name": "kunalnagar.in",
  "version": "1.4.10",
  "description": "Personal website",
  "homepage": "https://www.kunalnagar.in",
  "repository": {
    "type": "git",
    "url": "git@github.com:kunalnagar/kunalnagar.github.io.git"
  },
  "author": "Kunal Nagar <knlnagar@gmail.com>",
  "scripts": {
    "build": "bundle exec jekyll build",
    "deploy": "semantic-release --debug",
    "dev": "bundle exec jekyll serve --livereload --host=0.0.0.0",
    "logs": "docker-compose logs -f",
    "pretty-quick": "pretty-quick",
    "start": "docker-compose up -d",
    "stop": "docker-compose down -v"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "pretty-quick"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^17.1.1",
    "sort-package-json": "^1.44.0"
  }
}
